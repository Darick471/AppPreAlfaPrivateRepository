<Page
    x:Class="AppPreAlfa.Views.Login.UserStepView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppPreAlfa.Views.Login"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <ScrollViewer IsTabStop="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Row="1"
                    Margin="0,70,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Spacing="16">

                <Border Width="200"
                        Height="200"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">
                    <Ellipse
                               Width="150"
                               Height="150">
                        <Ellipse.Fill>
                            <ImageBrush
 
                                    Stretch="UniformToFill" />
                            <!-- Pendiendte de recurso -->
                        </Ellipse.Fill>
                    </Ellipse>
                </Border>

                <TextBlock FontStyle="Normal" Text="Ingrese su nombre de usuario"
                            FontSize="14"
                            FontWeight="ExtraBold"
                            HorizontalAlignment="Left"
                            Margin="15,5,0,0"
                            Foreground="Black" />

                <TextBox
                            x:Name="UserTextBox"
                            Grid.Column="0"
                            Background="White"
                            BorderBrush="White"
                            Height="60"
                            Width="350"
                            HorizontalAlignment="Center"
                            Margin=" 0,0,0,0"
                            Text="{Binding Nombres, Mode=TwoWay}"
                            Style="{StaticResource MaterialOutlinedTextBoxStyle}"
                            AutomationProperties.AutomationId="TextBox_Default_Placeholder_Material" />
                <TextBlock
                               x:Name="UserMismatchWarning"
                               Text="{Binding WarningMessage}"
                               Foreground="Red"
                               FontSize="12"
                               Visibility="{Binding WarningMessage, Converter={StaticResource StringToVisibilityConverter}}"
                               Margin="0,0,0,0"
                               TextWrapping="WrapWholeWords"
                               HorizontalAlignment="Left" />

                <TextBlock
                            FontStyle="Normal" Text="Bienvenido"
                            FontSize="25"
                            FontWeight="Bold"
                            FontFamily="Arial"
                            HorizontalAlignment="Center"
                            Margin="0,35,0,35"
                            Foreground="Black" />

                <Button
                        x:Name="SiguienteButton"
                        Margin="10, 10 ,8 ,8"
                        CornerRadius="5"
                        Width="350"
                        Height="50"
                        HorizontalAlignment="Center"
                        Content="Siguiente"
                        Command="{Binding SiguienteCommand}"
                        IsEnabled="{Binding !SiguienteCommand.IsExecuting}"
                        FontSize="16"/>
                <Grid
                        VerticalAlignment="Bottom"
                        Margin="0,40,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button
                            Width="160"
                            HorizontalAlignment="Left"
                            Grid.Column="0"
                            Content="Olvidé mi contraseña"
                            Foreground="Gray"
                            FontWeight="ExtraBold"
                            Style="{StaticResource TextButtonStyle}" />
                    <Button
                            x:Name="RegistroButton"
                            Width="90"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Content="Registrate"
                            Foreground="#0d99ff"
                            FontWeight="ExtraBold"

                            Style="{StaticResource TextButtonStyle}" />



                </Grid>
                <Grid
                        VerticalAlignment="Bottom"
                        Margin="0,40,0,0">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button
                            Width="160"
                            HorizontalAlignment="Left"
                            Grid.Column="0"
                            Content="Política de Privacidad"
                            Foreground="Gray"
                            FontWeight="ExtraBold"
                            Style="{StaticResource TextButtonStyle}" />
                    <Button
                            Width="160"
                            HorizontalAlignment="Right"
                            Grid.Column="1"
                            Content="Reportar un problema"
                            Foreground="Gray"
                            FontWeight="ExtraBold"
                            Style="{StaticResource TextButtonStyle}"/>



                </Grid>

                <TextBlock
                            FontStyle="Oblique"
                            FontFamily="Arial"
                            Text="Al iniciar sesión aceptas nuestro aviso de &#x0a;privacidad y los terminos de uso"
                            TextAlignment="Center"
                            FontSize="10"
                            FontWeight="ExtraBold"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Margin="15,25,0,0"
                            Foreground="Gray"/>

            </StackPanel>

        </Grid>

    </ScrollViewer>
</Page>
